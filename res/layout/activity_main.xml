<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.uwm.diabetesapp.MainActivity"
    android:weightSum="1">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BGL"
        android:id="@+id/BGLbutton"
        android:height="100dp"
        android:width="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/bgl"
        android:textAllCaps="false"
        android:clickable="false" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nutrition"
        android:id="@+id/Nutritionbutton"
        android:height="90dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/BGLbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:drawableLeft="@drawable/nutrition"
        android:textAllCaps="false"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fitness"
        android:id="@+id/Fitnessbutton"
        android:height="90dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/FitnessSave_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical"
        android:textAlignment="center"
        android:drawableLeft="@drawable/fitness"
        android:textAllCaps="false"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication"
        android:id="@+id/Medicationbutton"
        android:height="90dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/Fitnessbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:drawableLeft="@drawable/meds"
        android:textAllCaps="false"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stats"
        android:id="@+id/Statsbutton"
        android:height="90dp"
        android:width="160dp"
        android:textSize="30dp"
        android:layout_below="@+id/Medicationbutton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="center"
        android:drawableLeft="@drawable/graphs"
        android:textAllCaps="false"/>
</LinearLayout>
